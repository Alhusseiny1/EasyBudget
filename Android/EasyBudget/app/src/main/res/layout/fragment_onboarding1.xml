<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_1_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.welcome.Onboarding1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:text="Welcome to EasyBudget beta"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:text="The concept is quite simple: you just enter your expenses (one time and montly recurring ones) and the app takes care of letting you know exactly how much money you have and you'll have at a given day.\nSimple as that."
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:text="Ready?"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <Button android:id="@+id/onboarding_screen1_next_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Next"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        android:background="@drawable/welcome_screen_next_button_drawable"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
