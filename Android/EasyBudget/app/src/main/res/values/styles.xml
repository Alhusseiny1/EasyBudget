<resources>

    <!-- App theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Caldroid bug: https://github.com/roomorama/Caldroid/issues/266 -->
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidDefaultRightButton</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultMonthName</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekday</item>
    </style>

    <!-- App theme without ActionBar -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- FAB style -->
    <style name="fab_labels_style">
        <item name="android:background">@drawable/fab_action_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Caldroid -->
    <style name="caldroid_style" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultCalendarViewLayout</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidDefaultRightButton</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultMonthName</item>
        <item name="styleCaldroidGridView">@style/caldroid_gridview</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultSquareCell</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekday</item>
    </style>

    <style name="caldroid_gridview" parent="CaldroidDefaultGridView">
        <item name="android:background">@android:color/white</item>
        <item name="android:horizontalSpacing">0dip</item>
        <item name="android:verticalSpacing">0dip</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
</resources>
